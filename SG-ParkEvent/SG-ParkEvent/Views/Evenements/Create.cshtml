        <div>
            <div class="col m10 ">
                <input type="submit" value="Ajouter" class="btn" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retourner à la liste des évènements", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
